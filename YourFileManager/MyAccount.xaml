        <TextBlock HorizontalAlignment="Left" Margin="75,138,0,0" Text="Hasło Użytkownika: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"/>
        <TextBox Name="TextBoxNewPassword" HorizontalAlignment="Left" Margin="239,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" Height="21"/>

    </Grid>
