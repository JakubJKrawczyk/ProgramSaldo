<Window x:Class="ProgramPraca.ColumnManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramPraca"
        mc:Ignorable="d"
        Title="ColumnManager" Height="150" Width="300">
    <Grid>
        <Button x:Name="but1" Content="Dodaj Kolumnę" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Panel.ZIndex="6" Background="White" BorderBrush="#FFAEAEAE" Width="200" Height="34" UseLayoutRounding="True" Foreground="#FF87BC5E" ClickMode="Release" FontSize="16" Click="AddColumn"/>
        <Button x:Name="but2" Content="Modyfikuj Kolumnę" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" Panel.ZIndex="6" Background="White" BorderBrush="#FFAEAEAE" Width="200" Height="34" UseLayoutRounding="True" Foreground="#FF87BC5E" ClickMode="Release" FontSize="16" Click="ModifyColumn"/>

    </Grid>
</Window>
